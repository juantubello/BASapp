<mvc:View
    controllerName="com.firstbassapp.firstapp.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                    <Button text="boton" press=".onShowHello"></Button>
                    <Input
                     value="{/recipient/name}"
                      description="Hello {/recipient/name}" 
                      width="60%"></Input>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
